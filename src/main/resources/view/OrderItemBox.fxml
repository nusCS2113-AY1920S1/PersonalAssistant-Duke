<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root xmlns:fx="http://javafx.com/fxml/1" maxHeight="100.0" minWidth="100.0" prefHeight="80.0"
         style="-fx-background-radius: 5; -fx-background-color: #00bfa5;" type="AnchorPane"
         xmlns="http://javafx.com/javafx/11.0.1">
    <children>
        <VBox alignment="CENTER" prefHeight="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label fx:id="itemName" alignment="CENTER" text="{name}" textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font name="SF Pro Text Regular" size="24.0"/>
                    </font>
                    <VBox.margin>
                        <Insets left="10.0" right="10.0"/>
                    </VBox.margin>
                </Label>
                <Label fx:id="itemQuantity" alignment="CENTER" text="{quantity}" textAlignment="CENTER"
                       textFill="#ebebeb">
                    <font>
                        <Font name="Arial" size="18.0"/>
                    </font>
                </Label>
            </children>
        </VBox>
    </children>
</fx:root>
