<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<fx:root xmlns:fx="http://javafx.com/fxml/1" fx:id="cardView" maxWidth="-Infinity"
         prefWidth="170.0"
         style="-fx-border-color:black; -fx-border-width: 1; -fx-border-style: solid;" type="javafx.scene.layout.AnchorPane"
         xmlns="http://javafx.com/javafx/11.0.1">
    <children>
        <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="10.0" layoutY="42.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@../images/impression_name.png"/>
            </image>
        </ImageView>
        <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="10.0" layoutY="77.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@../images/impression_critical.png"/>
            </image>
        </ImageView>
        <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="9.0" layoutY="115.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@../images/impression_follow-up.png"/>
            </image>
        </ImageView>
        <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="9.0" layoutY="152.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@../images/details.png"/>
            </image>
        </ImageView>
        <Label fx:id="criticalLabel" layoutX="53.0" layoutY="83.0" prefHeight="20.0" prefWidth="106.0" text="Critical">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <Label fx:id="followupLabel" layoutX="53.0" layoutY="122.0" prefHeight="20.0" prefWidth="106.0"
               text="Follow-up">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <Label fx:id="descriptionLabel" layoutX="53.0" layoutY="157.0" prefHeight="20.0" prefWidth="106.0"
               text="Description" wrapText="true">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <Label fx:id="nameLabel" layoutX="52.0" layoutY="47.0" prefHeight="20.0" prefWidth="106.0" text="Name">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <BorderPane layoutY="7.0" prefHeight="30.0" prefWidth="168.0">
            <center>
                <Label fx:id="indexLabel" alignment="CENTER"
                       style="-fx-background-color: lightblue; -fx-border-color: black; -fx-border-width: 1; -fx-border-style: solid;"
                       text="IMPRESSION" textAlignment="CENTER" BorderPane.alignment="CENTER">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                    <padding>
                        <Insets left="10.0" right="10.0"/>
                    </padding>
                </Label>
            </center>
        </BorderPane>
    </children>
    <padding>
        <Insets bottom="5.0" top="5.0"/>
    </padding>
</fx:root>
